<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Due Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |story|}}
    <tr>
      <td>{{#link-to 'stories.story' story.id}}{{story.title}}{{/link-to}}</td>
      <td>{{story.dueDate}}</td>
      <td style="text-align: center" {{action 'deleteStory' story}}><button class="btn btn-danger btn-sm">Delete</button></td>
    </tr>
  {{else}}
    <tr>
      <td colspan="2">Coleção Vazia</td>
    </tr>
  {{/each}}
  </tbody>
</table>
