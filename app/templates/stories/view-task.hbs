
<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">Task:</h1>
  </div>
  <div class="panel-body">
    <h2>{{model.name}}</h2>
  </div>
  <div class="panel-footer">
    {{#link-to 'stories.edit-task' model.id class="btn btn-success btn-sm"}}Edit Task{{/link-to}}
    <button class="btn btn-danger btn-sm" {{action 'deleteTask' model}}>Delete task</button>
  </div>
</div>
