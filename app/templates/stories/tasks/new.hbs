<h1>Add new Task</h1>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Task Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.task.name class="form-control" placeholder="The name of the Task"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveTask' model.task}}>Save Task</button>
    </div>
  </div>
</div>
