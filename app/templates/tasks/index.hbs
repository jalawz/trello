<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |task|}}
    <tr>
      <td>{{#link-to 'tasks.task' task.id}}{{task.name}}{{/link-to}}</td>
      <td style="text-align: center"><button class="btn btn-danger" {{action 'deleteTask' task}}>Delete</button></td>
    </tr>
  {{else}}
    <tr>
      <td colspan="2">Coleção Vazia</td>
    </tr>
  {{/each}}
  </tbody>
</table>
