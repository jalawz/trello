<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |task|}}
    <tr>
      <td>{{#link-to 'tasks.task' task.id}}{{task.name}}{{/link-to}}</td>
    </tr>
  {{else}}
    <tr>
      <td colspan="2">Coleção Vazia</td>
    </tr>
  {{/each}}
  </tbody>
</table>
